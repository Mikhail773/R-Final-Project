#!/bin/bash
# Usage: Command name followed by executable filename you want to find 

case $# in
0)
echo "Usage: $0 command"
exit 1;;
1)
pathlist=$(echo $PATH | tr ':'   ' ')
for var in $pathlist
do
   searchableDirectory+=$(ls -ld $var | grep -nE '^dr.x' | awk '{ print $9 "/"}')" "
done	

for var in $searchableDirectory
do
	filesFound=$(ls -al $var |  grep -nE '^-..x' | awk '{ print $9 }' | grep -w $1) 
	if [[ $filesFound == "$1" ]]
 	  then
	     echo $var$filesFound
	     exit 0
	fi	
done
	  echo "$1: Command not found."
   	  exit 0
 ;;
*)
echo "Usage: $0 command"
exit 1;;
esac
